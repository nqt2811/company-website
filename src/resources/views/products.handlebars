<div class="show-products">
    {{#each products}}
    <div class="col">
        <div class="card h-100  text-center mb-3">
            <a href="/products/{{this.slug}}">
                <img src="/img/khaivan-logo.png" class="card-img-top" alt="product image">
            </a>
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.using}}</p>
                <a href="/products/{{this.slug}}" class="btn btn-primary ">Chi tiết sản phẩm</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>